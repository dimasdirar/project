@bot.message_handler(commands=['start'])
def main(message):
     bot.reply_to(message, f"Hello,\nMaybe you want to watch the news from Novosibirsk or watch movies or cartoons, maybe you can watch YouTube?\n Need help? -- /help")


@bot.message_handler(commands=['help'])
def helps(message):
     bot.reply_to(message, f"My commands: \n/start -- Information \n/help -- This is window\n/news -- News from Novosibirsk\n/afisha -- Movies or cartoons\n/YT or /yt -- YouTube\n/joke -- Joke")


@bot.message_handler(commands=['news'])
def news(message):
