@dp.message(Command("start"))
async def cmd_start(message: types.Message):
    await message.answer("Привет. Hi. Сәлеметсіз бе. Cześć. Как тебе? Класно? "
                         "\n\tМожет анекдоты или же новости Новосибирска или же может... ")
    await message.answer("\n\tХочешь посмотреть фильмы или мультфильм, может зайти на ютуб-канал по прахождению разных игр")
    await message.answer("\n\t/joke"
                         "\n\t/news")
    kb = [
        [
            types.KeyboardButton(text="/joke"),
            types.KeyboardButton(text="/news"),
            types.KeyboardButton(text="/smotre")
        ],
    ]
    keyboard = types.ReplyKeyboardMarkup(
        keyboard=kb,
        resize_keyboard=True,
        input_field_placeholder="Выберите способ подачи"
        )
    await message.answer("Привет. Hi. Сәлеметсіз бе. Cześć. Как тебе? Класно?\nМожет анекдоты или же новости Новосибирска или же может...\nХочешь посмотреть фильмы или мультфильм, может зайти на ютуб-канал по прахождению разных игр", reply_markup=keyboard)


@dp.message(Command("joke"))
async def cmd_smex(message: types.Message):
    await message.answer("Маленький сын спрашивает отца: "
                         "— папа, а почему ты повесил конфеты на ёлку так высоко?"
                         "— Для того чтобы ты не достал их до Нового Года!"
                         "— Так мне что, теперь дождик жрать?!"
                         "посвященный культуре и истории проклятий")


@dp.message(Command("news"))
async def cmd_nsk(message: types.Message):
    await message.answer("Https://t.me/nsknewsinfo")
    
    
